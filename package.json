{
  "name": "onusone-p2p",
  "version": "1.0.0",
  "description": "Decentralized P2P messaging network with Solana blockchain integration",
  "private": true,
  "workspaces": [
    "frontend",
    "node",
    "contracts",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:node\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:node": "cd node && npm run dev",
    "dev:unified": "concurrently \"cd frontend && npm run build:production\" \"cd node && npm run dev\"",
    "start:unified": "node start-unified-local.js",
    "local:unified": "node local-unified-server.js",
    "build": "npm run build:frontend && npm run build:node",
    "build:frontend": "cd frontend && npm run build:production",
    "build:node": "cd node && npm run build",
    "start": "cd node && npm start",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "express": "^4.18.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}

{
  "name": "onusone-p2p",
  "version": "1.0.0",
  "description": "OnusOne Time Capsule App - Send messages to the future with ONU tokens",
  "private": true,
  "workspaces": [
    "frontend",
    "node"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:node\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:node": "cd node && npm run dev",
    "build": "npm run build:frontend && npm run build:node",
    "build:frontend": "cd frontend && npm run build:production",
    "build:node": "cd node && npm run build",
    "start": "cd node && npm start",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  }
}

# OnusOne P2P Node Configuration

# Network Configuration
P2P_PORT=8887
HTTP_PORT=8888
NODE_ENV=development

# Node Identity
NODE_ID=
WALLET_ADDRESS=

# Networking
BOOTSTRAP_NODES=
MAX_PEERS=50
ENABLE_MDNS=true
ENABLE_WEBSOCKETS=false

# Storage Configuration
STORAGE_PATH=./data
MAX_STORAGE_GB=100
IPFS_API_URL=http://localhost:5001
ENABLE_IPFS_PINNING=true

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Database
DB_PATH=./data/messages.db
DB_BACKUP_INTERVAL=3600000

# Decay Algorithm
DECAY_UPDATE_INTERVAL=60000
DECAY_RATE_PER_HOUR=1
INITIAL_MESSAGE_SCORE=100

# Bounty System
ENABLE_BOUNTY_PROCESSING=true
WEEKLY_RESET_DAY=0
VOTING_PERIOD_HOURS=48
MIN_BOUNTY_SUBMISSIONS=3

# Performance
ENABLE_METRICS=true
METRICS_INTERVAL=30000
MAX_MEMORY_MB=2048
ENABLE_CLUSTERING=false

# Security
ENABLE_MESSAGE_SIGNING=true
REQUIRE_PEER_VERIFICATION=false
MAX_MESSAGE_SIZE=10000
RATE_LIMIT_PER_SECOND=10

# Development
ENABLE_DEV_MODE=false
MOCK_IPFS=false
SKIP_BOOTSTRAP=false
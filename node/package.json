{
  "name": "@onusone/p2p-node",
  "version": "0.1.0",
  "description": "OnusOne P2P network node - handles distributed messaging and storage",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/working-backend.ts",
    "start": "node dist/orbit-server.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "node:bootstrap": "tsx src/working-backend.ts",
    "node:relay": "tsx src/working-backend.ts",
    "node:storage": "tsx src/working-backend.ts",
    "orbit:dev": "tsx watch src/orbit-server.ts",
    "orbit:start": "node dist/orbit-server.js",
    "orbit:build": "tsc && node dist/orbit-server.js"
  },
  "keywords": [
    "p2p",
    "libp2p",
    "ipfs",
    "decentralized",
    "messaging",
    "onusone"
  ],
  "author": "OnusOne Community",
  "license": "MIT",
  "dependencies": {
    "@helia/http": "^2.2.1",
    "@helia/unixfs": "^5.1.0",
    "@solana/web3.js": "^1.98.4",
    "@supabase/supabase-js": "^2.54.0",
    "@types/uuid": "^8.3.4",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helia": "^5.5.1",
    "ipfs-http-client": "^60.0.1",
    "multiformats": "^12.1.3",
    "socket.io": "^4.8.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "uint8arrays": "^4.0.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.0.1",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/socket.io": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

# ONU Token Environment Configuration
# Copy this file to .env.local and fill in the values

# Solana Network Configuration
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# ONU Token Configuration (REPLACE WITH ACTUAL VALUES AFTER DEPLOYMENT)
NEXT_PUBLIC_TOKEN_MINT=YOUR_ONU_TOKEN_MINT_ADDRESS_HERE
NEXT_PUBLIC_TREASURY_ADDRESS=YOUR_TREASURY_ADDRESS_HERE

# Program Configuration (for future use)
NEXT_PUBLIC_PROGRAM_ID=11111111111111111111111111111111

# P2P Network Configuration
NEXT_PUBLIC_P2P_ENABLED=true
NEXT_PUBLIC_P2P_BOOTSTRAP_NODES=

# Feature Flags
NEXT_PUBLIC_STAKING_ENABLED=true
NEXT_PUBLIC_REPLIES_ENABLED=true
NEXT_PUBLIC_REPUTATION_ENABLED=true

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=true

